// Note: The config is specific to avoid the following error: node:internal/process/esm_loader:40internalBinding('errors').triggerUncaughtException
{
  // "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "noEmit": true,
    "typeRoots": ["node_modules/@types", "../../../node_modules/@types"]
  },
  "exclude": ["node_modules", "build"]
}